    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'StuCCompiler2'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=StuCCompiler2",
                    "--package=StuCCompiler2"
                ],
                "filter": {
                    "name": "StuCCompiler2",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'StuCCompiler2'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=StuCCompiler2",
                    "--package=StuCCompiler2"
                ],
                "filter": {
                    "name": "StuCCompiler2",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug NASM assembly",
            "program": "${workspaceFolder}/a.out",
            "args": ["1", "2", "3"],
            "cwd": "${workspaceFolder}"
        }
    ]
